head
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500")
    link(href="/css/style.css" rel="stylesheet" type="text/css")

div(class="header")
    a(href="/home")
        h1(id="title") Re-job

div(class="resume-job-part")
    div(id="page_left")
        form(method="post" action="/resume" novalidate)
            div(class="form-header")
                h2 Add a resume.
            div(class="form-field")
                input(class="input" name="name" type="text" placeholder="Full Name" required)
            div(class="form-field")
                input(class="input" name="email" type="text" placeholder="Email" required)
            div(class="form-field")
                label(class="input-label") Highest degree earned 
                select(class="input-drop-down" name='resumeEdDropDown', id='')
                    each edLevel in Education
                        option=edLevel
            div(class="form-field")
                label(class="input-label") Years of experience 
                select(class="input-drop-down" name='resumeExpDropDown', id='')
                    each expLevel in Experience
                        option=expLevel
            div(class="form-field")
                label(class="input-label") List all skills divided by commas
                textarea(class="input-area" name="skills" type="text" placeholder="Skills" rows="8" required)
            div(class="form-actions")
                button(class="btn" type="submit") Add
            div(id="error")
                if error_signup
                    p= error_signup

    div(id="vertical-line-home")

    div(id="page_right")
        form(method="post" action="/job" novalidate)
            div(class="form-header")
                h2 Add a job description.
            div(class="form-field")
                input(class="input" name="name" type="text" placeholder="Job Name" required)
            div(class="form-actions")
                button(class="btn" type="submit") Add
            div(id="error")
                if error_login
                    p= error_login

div(class="resume-job-board")
    h2 Resumes-Jobs Board
    ul(class="resume-job-list")
        each val in [1, 2, 3, 4, 5]
            li= "Test " + val
            br